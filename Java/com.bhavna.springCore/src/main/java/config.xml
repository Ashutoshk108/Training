<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean id="stud"
		class="com.bhavna.springCore.com.bhavna.springCore.Student">
		<property name="rollNo" value="1" />
		<property name="name" value="Sahil" />
		<property name="salary" value="700000" />
	</bean>
	<bean id="exam"
		class="com.bhavna.springCore.com.bhavna.springCore.Exam">
		<property name="eId" value="121" />
		<property name="name" value="Karan" />
		<property name="marks" value="87" />
	</bean>
	
	<bean id="stud1"
		class="com.bhavna.springCore.com.bhavna.springCore.Student">
		<constructor-arg value="3"/>
		<constructor-arg value="Aman" />
		<constructor-arg value="60000"/>
	</bean>
	<bean id="exam1"
		class="com.bhavna.springCore.com.bhavna.springCore.Exam">
		<constructor-arg value="2"/>
		<constructor-arg value="Aman"/>
		<constructor-arg value="87"/>
	</bean>

</beans>